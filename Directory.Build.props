<Project>
  <ItemGroup>
    <Content Include="$(MSBuildProjectDirectory)\Examples\*.txt" CopyToOutputDirectory="Always" TargetPath="Examples\$(MSBuildProjectName)-%(FileName)%(Extension)" />
    <Content Include="$(MSBuildProjectDirectory)\Inputs\*.txt" CopyToOutputDirectory="Always" TargetPath="Inputs\$(MSBuildProjectName)-%(FileName)%(Extension)" />
  </ItemGroup>

  <PropertyGroup>
    <MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
  </PropertyGroup>
</Project>